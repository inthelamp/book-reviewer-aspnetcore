<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Book Reviewer</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />      
    <link rel="stylesheet" href="~/css/Header.css" />        
    <link rel="stylesheet" href="~/css/Identity.css" />       
    <link rel="stylesheet" href="~/css/Review.css" />        
    <link rel="stylesheet" href="~/css/ReviewList.css" />  
    <link rel="stylesheet" href="~/css/Image.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div id="nav-title">
                    <img class="App-logo" src="~/images/logo.png" alt='Logo' asp-append-version="true"/>                          
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Book Reviewer</a>
                </div>
@*                 <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button> *@
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Reviews" asp-action="Create">New</a>
                        </li>                         
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Reviews" asp-action="GetReviews">Reviews</a>
                        </li>         
                        @if (User.Identity.IsAuthenticated) 
                        {               
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Reviews" asp-action="GetMyReviews">My Reviews</a>
                            </li>
                        }                          
                    </ul>
                </div> 
                <partial name="_LoadingPartial" />  
                <partial name="_LoginPartial" />               
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <img class='App-logo' src="~/images/logo.png" alt='Logo' /> &nbsp;Copyright &copy; 2022, IntheLamp - <a asp-area="" asp-controller="Home" asp-action="About">About</a>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
